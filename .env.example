# ============================================
# Configurações Gerais
# ============================================
ENVIRONMENT=development
DEBUG=true
APP_NAME="Sistema de Laudos"
APP_VERSION=1.0.0

# ============================================
# PostgreSQL
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=sistema_de_laudos
DB_USER=laudos_user
DB_PASSWORD=laudos_password_123

# ============================================
# Redis
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123
REDIS_URL=redis://:redis_password_123@redis:6379/0

# ============================================
# Keycloak / Autenticação
# ============================================
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=keycloak_admin_123
KEYCLOAK_PORT=8080
KEYCLOAK_HOSTNAME=localhost:8080
KEYCLOAK_DB_NAME=keycloak
KEYCLOAK_REALM=sistema_laudos
KEYCLOAK_CLIENT_ID=sistema_laudos_backend
KEYCLOAK_CLIENT_SECRET=your_client_secret_change_in_production

# ============================================
# FastAPI / Backend
# ============================================
BACKEND_PORT=8000
SECRET_KEY=your_secret_key_change_in_production_use_random_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database URL completa
DATABASE_URL=postgresql://laudos_user:laudos_password_123@postgres:5432/sistema_de_laudos

# Celery
CELERY_BROKER_URL=redis://:redis_password_123@redis:6379/1
CELERY_RESULT_BACKEND=redis://:redis_password_123@redis:6379/2

# ============================================
# Frontend / React + Vite
# ============================================
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:8000/api
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=sistema_laudos
VITE_KEYCLOAK_CLIENT_ID=sistema_laudos_frontend

# ============================================
# Nginx
# ============================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================
# Flower (Monitoramento Celery)
# ============================================
FLOWER_PORT=5555

# ============================================
# APIs Externas
# ============================================
NOMINATIM_ENDPOINT=https://nominatim.openstreetmap.org
NOMINATIM_RATE_LIMIT=1
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================
# Bureau Externo (MySQL)
# ============================================
BUREAU_DB_HOST=bureau.example.com
BUREAU_DB_PORT=3306
BUREAU_DB_USER=bureau_user
BUREAU_DB_PASSWORD=bureau_password
BUREAU_DB_NAME=bureau_database
BUREAU_DB_TIMEOUT=30

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost,http://localhost:3000

# ============================================
# Segurança
# ============================================
ALLOWED_HOSTS=localhost,127.0.0.1,*.example.com
MAX_UPLOAD_SIZE=50
